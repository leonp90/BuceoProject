extends layout

block content
  .container
    .col-md-12
      h1=title
    .col-md-6
          ul
            each elem,index in events
              li.col-md-9
                  div.col-md-12.list-group-item-heading=elem.title
                  div.col-md-6.list-group-item-text='Fecha: '+elem.date
                  div.col-md-6.list-group-item-text='Hora: '+elem.time
                  div.col-md-6.list-group-item-text='Experiencia requerida: '+elem.experience
              .col-md-3
                  button.col-md-12.btn.btn-primary(data-index=elem._id type='button') + INFO
                  button.col-md-12.btn.btn-secondary(data-index=elem._id type='button') APUNTATE
    .col-md-6
      script(type='text/javascript').
        var events =!{JSON.stringify(events)}
      div#calendar